<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item 
        android:id="@+id/media_preview_layer_background"
        android:drawable="@drawable/item_empty" />
    <item 
        android:id="@+id/media_preview_layer_foreground"
        android:drawable="@android:color/transparent" />
    <item
         android:id="@+id/media_preview_layer_border">
        <shape android:shape="rectangle" >
            <solid android:color="#00000000" />
		    <stroke
		        android:width="1dp"
		        android:color="#cccccccc" />
		    <padding
		        android:bottom="2dp"
		        android:left="2dp"
		        android:right="2dp"
		        android:top="2dp" />
        </shape>
    </item>
</layer-list>
